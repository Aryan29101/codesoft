tasks = []

def show_tasks():
    if not tasks:
        print("No tasks yet.")
    else:
        print("\nYour To-Do List:")
        for i in range(len(tasks)):
            status = "✔" if tasks[i]["done"] else "✗"
            print(f"{i+1}. {tasks[i]['name']} [{status}]")
    print()

def add_task():
    name = input("Enter task: ")
    tasks.append({"name": name, "done": False})
    print("Task added.\n")

def mark_done():
    show_tasks()
    num = int(input("Task number to mark done: "))
    if 0 < num <= len(tasks):
        tasks[num-1]["done"] = True
        print("Task marked as done.\n")

def remove_task():
    show_tasks()
    num = int(input("Task number to remove: "))
    if 0 < num <= len(tasks):
        tasks.pop(num-1)
        print("Task removed.\n")

while True:
    print("\n1. Add Task | 2. Mark Task as Done | 3. Remove Task | 4. Show Tasks | 5. Exit")
    choice = input("Choose an option: ")

    if choice == "1":
        add_task()
    elif choice == "2":
        mark_done()
    elif choice == "3":
        remove_task()
    elif choice == "4":
        show_tasks()
    elif choice == "5":
        print("Goodbye!")
        break
    else:
        print("Invalid choice.\n")
